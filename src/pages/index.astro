---
import Layout from '../layouts/Layout.astro';
---

<Layout title="vosuira">
	<main>
		<h1><span class ="text-gradient">vosuira</span><span class="role">i script stuff</span></h1>
		<div class="status-indicator">
			<span class="status-dot"></span>
			<span class="status-text">online</span>
		</div>
	</main>
</Layout>

<style>
	html, body {
	    overflow: hidden;
	}
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100vh;
		color: white;
		background-color: #0d0d0d;
		font-family: Arial, sans-serif;
	}
	h1 {
		font-size: 2.5rem;
		margin: 0.5rem 0;
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.highlight {
		color: #58a6ff;
	}
	.role {
		font-size: 1.2rem;
		color: #aaa;
	}
	.status-indicator {
		display: flex;
		align-items: center;
		margin: 1rem 0;
		padding: 0.5rem;
		border-radius: 8px;
		background-color: #161515;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.status-dot {
		height: 10px;
		width: 10px;
		background-color: #4CAF50; /* #4CAF50 */
		border-radius: 50%;
		margin-right: 0.5rem;
	}
	.status-text {
		font-size: 1rem;
		color: #aaa;
	}
	.social-links {
		display: flex;
		gap: 10px;
	}
	.icon-placeholder {
		font-size: 2rem;
		text-decoration: none;
		color: #58a6ff;
	}
</style>